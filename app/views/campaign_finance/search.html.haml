.container-fluid
    .row
        .col-md-8.offset-md-2
            .table-responsive-md.pt-5
                %table.table.table-striped.table-hover#events
                    %caption Table of Representatives
                    %thead.thead-dark
                        %tr
                            %th Name
                            %th= @header
                    %tbody
                        - @campaign_finance.each_with_index do |camp, _index|
                            %tr
                                %td= camp['name']
                                %td= camp[@category]
